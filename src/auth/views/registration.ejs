
  <form autocomplete="off" action="/register" method="post">
    <input 
      required 
      type="text" 
      name="email" 
      placeholder="Enter your email" 
      <% if (!params.login_hint) { %>autofocus="on"<% } else { %> value="<%= params.login_hint %>" <% } %>>
    <input 
      required 
      type="password" 
      name="password" 
      placeholder="and password" 
      <% if (params.login_hint) { %>autofocus="on"<% } %>>
  
    <button type="submit" class="login login-submit">Register</button>
  </form>
  